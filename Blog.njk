{% set postslist = collections.posts %}
{% include "postslist.njk" %}

<h3>Tags</h3>

<div class="tag-list">
{% for tag in collections.tagList %}
  {% set tagUrl %}/tags/{{ tag }}/{% endset %}
  <div class="full-slant slant-meta">
  <a href="{{ tagUrl | url }}">
  <span class="slant-first"></span><span class="slant">{{ tag }}</span><span class="slant-after"></span>
  </a>
</div>
{% endfor %}
</div>
