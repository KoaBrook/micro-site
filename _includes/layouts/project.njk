---
layout: layouts/base.njk
templateClass: tmpl-post
---
<h3 class="home strong">{{ title }}</h3>
<div class="tag-list">
{% for tag in tags %}
  {% set tagUrl %}/tags/{{ tag }}/{% endset %}
  <div class="full-slant slant-meta">
  <a href="{{ tagUrl | url }}">
  <span class="slant-first"></span><span class="slant">{{ tag }}</span><span class="slant-after"></span>
  </a>
</div>
{% endfor %}
</div>
 <br />
<div class="project-list">
{{ content | safe }}
</div>
<p><a href="{{ url }}" target="blank">See it</a> | <a href="{{ source }}" target="blank">Source</a></p>
<p><a href="{{ '/projects' | url }}">‚Üê Back to projects</a></p>

