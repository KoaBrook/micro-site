---
layout: layouts/base.njk
templateClass: tmpl-post
---
<h3 class="home strong">{{ title }}</h3>
{% for tag in tags %}
  {% set tagUrl %}/tags/{{ tag }}/{% endset %}
  <a href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
{% endfor %} <br />
<time class="postlist-date" datetime="{{ date | htmlDateString }}">Posted on {{ date | readableDate }}</time>
{{ content | safe }}
<p><a href="{{ '/' | url }}">← Home</a></p>

